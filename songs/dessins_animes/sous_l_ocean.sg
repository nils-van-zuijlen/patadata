  \begin{verse*}
    \textnote{Sébastien}
    La vie est super,
    Mieux que sur la terre, je te le dis.
  \end{verse*}

  \begin{verse*}
    \textnote{Choeurs d'escargots}
    Oui, je te le dis! hi hi!
  \end{verse*}

  \begin{verse*}
    \textnote{Sébastien}
    Tu vois l'esturgeon et la raie,
    Se sont lancés dans le reggae.
    On a le rythme,
    C'est d'la dynamite,
    Sous l'océan!
  \end{verse*}

  \begin{verse*}
    Riton au flution,
    La carpe joue de la harpe,
    La rascasse d'la basse,
    C'est les rois du rap.
  \end{verse*}

  \begin{verse*}
    Maquereau au saxo,
    Turbo au bango,
    Le lieu est le dieu de la Soul.
  \end{verse*}

  \begin{verse*}
    La raie au turbet,
    Le gardon au violon.
    Les soles rock'n'rollent,
    Le thon garde le ton.
  \end{verse*}

  \begin{verse*}
    Le bar et le sprat se marrent et s'éclatent,
    Vas-y souffle mon doudou!
  \end{verse*}

